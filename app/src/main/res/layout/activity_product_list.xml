<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.application.products.ProductList"
    >



    <TextView
        android:id="@+id/label_recommended"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="おすすめ"
        android:textColor="#fff"
        android:background="@color/colorAccent"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/label_recommended"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/label_all"
        android:layout_below="@id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="製品一覧"
        android:textColor="#fff"
        android:background="@color/colorAccent"/>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/label_all"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_below="@id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:text="注文確認画面へ"
        />
</RelativeLayout>
